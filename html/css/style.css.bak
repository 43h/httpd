/**标题1**/
h1 {
    margin: 1em 0 0 0;
    font-size: 1.5em;
    letter-spacing: 2px;
}

/**时间线**/
/*外框*/
#timeline {
    /*默认无轮廓*/
    list-style: none;
    /*外侧间距 上50 左120*/
    margin: 50px 0 0 120px;
    /*内侧间距 左30px*/
    padding-left: 30px;
    /*显示左边框*/
    border-left: 10px solid #F7ADAD;
}

/*时间线单个条目*/
#timeline li {
    margin: 30px 0 0 0;
    position: relative;
}

/*正文内容*/
#timeline p {
    margin: 0;
}

/*日期*/
.date {
    margin-top: -10px;
    /*相对高度*/
    top: 50%;
    left: -160px;
    font-size: 1.2em;
    line-height: 20px;
    position: absolute;
}

/*圆点*/
.circle {
    margin-top: -10px;
    top: 50%;
    left: -45px;
    width: 10px;
    height: 10px;
    background: gray;
    border: 5px solid #eee9dc;
    border-radius: 50%;
    display: block;
    position: absolute;
}

/*标题*/
.content {
    max-height: 20px;
    padding: 50px 20px 0;
    /*标签边框颜色*/
    border-color: transparent;
    border-width: 2px;
    border-style: solid;
    border-radius: 0.5em;
    position: relative;
}

/*箭头*/
.content:before,
.content:after {
    content: "";
    width: 0;
    height: 0;
    border: solid transparent;
    position: absolute;
    pointer-events: none;
    right: 100%;
}

.content:before {
    border-right-color: inherit;
    border-width: 20px;
    top: 50%;
    margin-top: -20px;
    /*箭头外侧颜色*/
    border-right-color: #ffffff;
}

.content:after {
    /*箭头颜色*/
    border-right-color: #B5B3B4;
    border-width: 17px;
    top: 50%;
    margin-top: -17px;
}

/*隐藏明细*/
.content p {
    max-height: 0;
    color: transparent;
    text-align: justify;
    word-break: break-word;
    hyphens: auto;
    /*默认隐藏明细*/
    overflow: hidden;
}

/*未展开时标签*/
label {
    font-size: 1.5em;
    position: absolute;
    /*上层显示*/
    z-index: 100;
    cursor: pointer;
    top: 10px;
    left: 10px;
    /* transition: transform 0.1s linear; */
}

/*单选组*/
.radio {
    display: none;
}

/*选中时移动标签*/
.radio:checked+.relative label {
    cursor: auto;
    /* transform: translateX(42px); */
}

/*被选中时圆点颜色*/
.radio:checked+.relative .circle {
    background: #228B22;
}

/*选中时明细边框*/
.radio:checked~.content {
    max-height: 100%;
    border-color: #B5B3B4;
    margin-right: 20px;
    /* transform: translateX(20px); */
    transition: max-height 0.4s linear, border-color 0.5s linear, transform 0.2s linear;
}

/*选中时明细内容*/
.radio:checked~.content p {
    max-height: 100%;
    color: #363636;
    word-wrap: break-word;
    transition: color 0.1s linear 0.1s;
}

/*表格*/
#container {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
}