/**全局**/
body {
    margin: 0 auto;
    padding: 0 5% 0 5%;
    font-size: 100%;
    height: 100%;
    width: 90%;
    font-family: "Noto Sans", sans-serif;
    color: #003B4A;
    background-color: #F6F6F6;
}

/**导航栏**/
ul.topnav {
    list-style-type: none;
    margin: 0;
    padding: 0 1%;
    overflow: hidden;
    width: 100%;
    background-color: #F5E8E6;
}

/*导航菜单位置*/
ul.topnav li {
    float: left;
}

ul.topnav li.right {
    float: right;
}

/*导航菜单链接*/
ul.topnav li a {
    display: block;
    color: 003B4A;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

